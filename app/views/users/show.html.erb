<% provide(:title, @user.username) %>
<div class="row">
	<div class="col-md-4">
		<h1>
			<%= gravatar_for @user, size: 50 %>
			<%= @user.username %>
		</h1>	
	</div>
	<div class="col-md-8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ul class="media-list">
				<%= render @microposts %>
			</ul>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>